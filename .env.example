# Word Train WebApp - Environment Variables Example

# Application Settings
FLASK_APP=wsgi:app
FLASK_ENV=development       # Options: development, production
FLASK_DEBUG=True           # Set to False in production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_SECRET_KEY=your_secret_key_here  # Generate a secure key in production

# Server Settings
SERVER_NAME=0.0.0.0:5000  # Add this line

# Gunicorn Settings
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=30
