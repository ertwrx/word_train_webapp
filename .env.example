# Word Train WebApp - Environment Variables Example

# Application Settings
FLASK_APP=app/main.py
FLASK_ENV=development       # Options: development, production
FLASK_DEBUG=True           # Set to False in production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_SECRET_KEY=change_this_in_production  # Generate a secure key in production

# Gunicorn Settings
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=30
